@model QLDiemRenLuyen.Models.ViewModels.StudentHomeVm
@using System.Linq
@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["Title"] = "Dashboard sinh viên";
}

<link rel="stylesheet" href="~/css/student-dashboard.css" />

<div class="container-fluid student-dashboard py-4">
    <div class="p-4 bg-primary text-white rounded-3 mb-4 banner-greeting">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div>
                <h4 class="mb-1 fw-bold">Xin chào, @Model.FullName</h4>
                <p class="mb-0" style="opacity: 0.9;">Học kỳ I - Năm học 2024-2025</p>
            </div>
            <a class="btn btn-light btn-sm text-primary d-inline-flex align-items-center fw-semibold" href="/student/profile">
                <i class="fa-solid fa-user-gear me-2"></i>
                Cập nhật hồ sơ
            </a>
        </div>
    </div>

    <div class="row g-3 g-md-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card overview-card shadow-sm h-100 border-0">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="icon-circle bg-primary text-white me-3">
                        <i class="fa-solid fa-chart-line"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle text-muted mb-2 text-uppercase small fw-semibold">Tổng điểm hiện tại</h6>
                        <h3 class="card-title mb-0 fw-bold">@Model.TotalScore</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card overview-card shadow-sm h-100 border-0">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="icon-circle bg-success text-white me-3">
                        <i class="fa-solid fa-people-group"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle text-muted mb-2 text-uppercase small fw-semibold">Hoạt động đã tham gia</h6>
                        <h3 class="card-title mb-0 fw-bold">@Model.ActivitiesJoined</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card overview-card shadow-sm h-100 border-0">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="icon-circle bg-warning text-white me-3">
                        <i class="fa-solid fa-folder-open"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle text-muted mb-2 text-uppercase small fw-semibold">Minh chứng đã tải lên</h6>
                        <h3 class="card-title mb-0 fw-bold">@Model.ProofsUploaded</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card overview-card shadow-sm h-100 border-0">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="icon-circle bg-info text-white me-3">
                        <i class="fa-solid fa-comments"></i>
                    </div>
                    <div>
                        <h6 class="card-subtitle text-muted mb-2 text-uppercase small fw-semibold">Phản hồi/kiến nghị</h6>
                        <h3 class="card-title mb-0 fw-bold">@Model.FeedbackCount</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-xxl-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fw-bold">
                        <i class="fa-solid fa-bell text-primary me-2"></i>
                        Thông báo gần đây
                    </h5>
                    <a href="/student/notifications" class="text-primary fw-semibold small text-decoration-none">
                        Xem tất cả <i class="fa-solid fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.Notifications?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var notification in Model.Notifications.OrderByDescending(n => n.CreatedAt).Take(3))
                            {
                                <a href="/student/notifications" class="list-group-item list-group-item-action border-0 py-3 px-4">
                                    <div class="d-flex align-items-start justify-content-between">
                                        <div class="flex-grow-1 me-3">
                                            <h6 class="mb-2 fw-semibold text-dark">@notification.Title</h6>
                                            <small class="text-muted">
                                                <i class="fa-regular fa-clock me-1"></i>
                                                @notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                        <i class="fa-solid fa-chevron-right text-primary mt-1"></i>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fa-regular fa-bell-slash fa-3x mb-3 d-block opacity-50"></i>
                            <p class="mb-0 fw-medium">Chưa có thông báo mới</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-xxl-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fw-bold">
                        <i class="fa-solid fa-calendar-days text-primary me-2"></i>
                        Hoạt động sắp diễn ra
                    </h5>
                    <a href="/student/activities" class="text-primary fw-semibold small text-decoration-none">
                        Xem lịch <i class="fa-solid fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingActivities?.Any() == true)
                    {
                        <div class="row g-3">
                            @foreach (var activity in Model.UpcomingActivities.OrderBy(a => a.StartAt).Take(3))
                            {
                                <div class="col-12">
                                    <div class="card border activity-card h-100">
                                        <div class="card-body p-3">
                                            <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
                                                <div class="flex-grow-1">
                                                    <h6 class="fw-semibold mb-2 text-dark">@activity.Title</h6>
                                                    <div class="text-muted small mb-1">
                                                        <i class="fa-regular fa-calendar me-1"></i>
                                                        @activity.StartAt.ToString("dd/MM/yyyy HH:mm")
                                                    </div>
                                                    <div class="text-muted small">
                                                        <i class="fa-regular fa-clock me-1"></i>
                                                        @activity.EndAt.ToString("dd/MM/yyyy HH:mm")
                                                    </div>
                                                </div>
                                                <span class="badge bg-primary text-white px-3 py-2 rounded-pill fw-semibold flex-shrink-0">
                                                    @activity.Status
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fa-regular fa-calendar-xmark fa-3x mb-3 d-block opacity-50"></i>
                            <p class="mb-0 fw-medium">Hiện chưa có hoạt động nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
