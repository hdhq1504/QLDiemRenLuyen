@model QLDiemRenLuyen.Models.ViewModels.StudentHomeVm
@using System.Linq
@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["Title"] = "Dashboard sinh viên";
}

<link rel="stylesheet" href="~/css/student-dashboard.css" />

<div class="container-fluid student-dashboard py-4">
    <!-- Banner chào mừng sinh viên -->
    <div class="p-4 bg-primary text-white rounded-3 shadow-sm mb-4 banner-greeting">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div>
                <h4 class="mb-1 fw-semibold">Xin chào, @Model.FullName 👋</h4>
                <p class="mb-0">Học kỳ I - Năm học 2024-2025</p>
            </div>
            <a class="btn btn-light btn-sm text-primary d-inline-flex align-items-center" href="#">
                <i class="fa-solid fa-user-gear me-2"></i>
                Cập nhật hồ sơ
            </a>
        </div>
    </div>

    <!-- Thẻ tổng quan điểm, hoạt động, minh chứng, phản hồi -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card overview-card shadow-sm h-100 border-0">
                <div class="card-body d-flex flex-column align-items-start">
                    <div class="icon-circle bg-primary text-white mb-3">
                        <i class="fa-solid fa-chart-line"></i>
                    </div>
                    <h6 class="card-subtitle text-muted mb-2">Tổng điểm hiện tại</h6>
                    <h3 class="card-title mb-0 fw-bold">@Model.TotalScore</h3>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card overview-card shadow-sm h-100 border-0">
                <div class="card-body d-flex flex-column align-items-start">
                    <div class="icon-circle bg-primary text-white mb-3">
                        <i class="fa-solid fa-people-group"></i>
                    </div>
                    <h6 class="card-subtitle text-muted mb-2">Hoạt động đã tham gia</h6>
                    <h3 class="card-title mb-0 fw-bold">@Model.ActivitiesJoined</h3>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card overview-card shadow-sm h-100 border-0">
                    <div class="card-body d-flex flex-column align-items-start">
                        <div class="icon-circle bg-primary text-white mb-3">
                            <i class="fa-solid fa-folder-open"></i>
                        </div>
                        <h6 class="card-subtitle text-muted mb-2">Minh chứng đã tải lên</h6>
                        <h3 class="card-title mb-0 fw-bold">@Model.ProofsUploaded</h3>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card overview-card shadow-sm h-100 border-0">
                    <div class="card-body d-flex flex-column align-items-start">
                        <div class="icon-circle bg-primary text-white mb-3">
                            <i class="fa-solid fa-comments"></i>
                        </div>
                        <h6 class="card-subtitle text-muted mb-2">Phản hồi/kiến nghị</h6>
                        <h3 class="card-title mb-0 fw-bold">@Model.FeedbackCount</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-12 col-xxl-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Thông báo gần đây</h5>
                        <a href="#" class="text-primary fw-semibold small">Xem tất cả</a>
                    </div>
                    <div class="card-body">
                        @if (Model.Notifications?.Any() == true)
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var notification in Model.Notifications.OrderByDescending(n => n.CreatedAt).Take(3))
                                {
                                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start py-3">
                                        <div class="me-3">
                                            <h6 class="mb-1 fw-semibold">@notification.Title</h6>
                                            <small class="text-muted">
                                                <i class="fa-regular fa-clock me-1"></i>@notification.CreatedAt.ToString("dd/MM/yyyy")
                                            </small>
                                        </div>
                                        <i class="fa-solid fa-angles-right text-primary"></i>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fa-regular fa-bell-slash fa-2x mb-3"></i>
                                <p class="mb-0">Chưa có thông báo mới.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-xxl-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Hoạt động sắp diễn ra</h5>
                        <a href="#" class="text-primary fw-semibold small">Xem lịch</a>
                    </div>
                    <div class="card-body">
                        @if (Model.UpcomingActivities?.Any() == true)
                        {
                            <div class="row g-3">
                                @foreach (var activity in Model.UpcomingActivities.OrderBy(a => a.StartAt).Take(3))
                                {
                                    <div class="col-12">
                                        <div class="card border-light-subtle shadow-sm activity-card h-100">
                                            <div class="card-body">
                                                <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
                                                    <div>
                                                        <h6 class="fw-semibold mb-1">@activity.Title</h6>
                                                        <div class="text-muted small">
                                                            <i class="fa-regular fa-calendar me-1"></i>
                                                            @activity.StartAt.ToString("dd/MM/yyyy HH:mm") - @activity.EndAt.ToString("dd/MM/yyyy HH:mm")
                                                        </div>
                                                    </div>
                                                    <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill fw-semibold">@activity.Status</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fa-regular fa-calendar-xmark fa-2x mb-3"></i>
                                <p class="mb-0">Hiện chưa có hoạt động nào.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>