@using QLDiemRenLuyen.Student.Models.ViewModels
@model StudentProfileVm
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    var avatarUrl = string.IsNullOrWhiteSpace(Model.AvatarUrl) ? Url.Content("~/images/avatar-placeholder.png") : Model.AvatarUrl;
}

@section Styles {
    <link rel="stylesheet" href="~/css/student-profile.css" asp-append-version="true" />
}

<div class="student-profile" data-profile>
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center gap-4">
            <div class="avatar-wrapper text-center">
                <img src="@avatarUrl" alt="Avatar" class="student-avatar rounded-circle" data-avatar />
                <div class="mt-2">
                    <button class="btn btn-outline-secondary btn-sm" type="button" id="changeAvatarBtn">
                        <i class="fa-solid fa-camera me-1"></i> Đổi ảnh đại diện
                    </button>
                    <input type="file" id="avatarInput" class="d-none" accept=".jpg,.jpeg,.png" />
                </div>
            </div>
            <div class="flex-grow-1">
                <h2 class="h4 mb-1" data-fullname>@Model.FullName</h2>
                <p class="mb-1 text-muted"><i class="fa-solid fa-envelope me-2"></i><span data-email>@Model.Email</span></p>
                <p class="mb-3 text-muted"><i class="fa-solid fa-user-graduate me-2"></i><span data-role>@Model.RoleName</span></p>
                <button class="btn btn-primary" type="button" id="editProfileBtn">
                    <i class="fa-solid fa-pen-to-square me-1"></i> Chỉnh sửa thông tin
                </button>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-white fw-semibold">Thông tin chung</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5 col-sm-4 text-muted">Mã SV</dt>
                        <dd class="col-7 col-sm-8" data-student-code>@(Model.StudentCode ?? "-")</dd>
                        <dt class="col-5 col-sm-4 text-muted">Lớp</dt>
                        <dd class="col-7 col-sm-8" data-class>@(string.IsNullOrWhiteSpace(Model.ClassName) ? "-" : Model.ClassName)</dd>
                        <dt class="col-5 col-sm-4 text-muted">Khoa</dt>
                        <dd class="col-7 col-sm-8" data-department>@(string.IsNullOrWhiteSpace(Model.DepartmentName) ? "-" : Model.DepartmentName)</dd>
                        <dt class="col-5 col-sm-4 text-muted">Giới tính</dt>
                        <dd class="col-7 col-sm-8" data-gender>@(string.IsNullOrWhiteSpace(Model.Gender) ? "-" : Model.Gender)</dd>
                        <dt class="col-5 col-sm-4 text-muted">Ngày sinh</dt>
                        <dd class="col-7 col-sm-8" data-dob>@(Model.Dob?.ToString("dd/MM/yyyy") ?? "-")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-white fw-semibold">Liên hệ</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5 col-sm-4 text-muted">Điện thoại</dt>
                        <dd class="col-7 col-sm-8" data-phone>@(string.IsNullOrWhiteSpace(Model.Phone) ? "-" : Model.Phone)</dd>
                        <dt class="col-5 col-sm-4 text-muted">Địa chỉ</dt>
                        <dd class="col-7 col-sm-8" data-address>@(string.IsNullOrWhiteSpace(Model.Address) ? "-" : Model.Address)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="editProfileModalPlaceholder"></div>
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080"></div>

<form id="antiForgeryForm" method="post" class="d-none">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script src="~/js/student.profile.js" asp-append-version="true"></script>
    <script>
        window.studentProfilePage = {
            editUrl: '@Url.Action("Edit", "StudentProfile")',
            updateUrl: '@Url.Action("Edit", "StudentProfile")',
            avatarUrl: '@Url.Action("UploadAvatar", "StudentProfile")'
        };
    </script>
}