@using System.Linq
@using QLDiemRenLuyen.ViewModels.Student
@model StudentProfileVm

<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileLabel">Cập nhật thông tin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editProfileForm">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label" for="FullName">Họ và tên <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="FullName" name="FullName" value="@Model.FullName" required maxlength="100" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="StudentCode">Mã sinh viên</label>
                        <input class="form-control" type="text" id="StudentCode" name="StudentCode" value="@Model.StudentCode" maxlength="50" />
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label" for="ClassId">Lớp</label>
                            <select class="form-select" id="ClassId" name="ClassId">
                                <option value="">-- Chọn lớp --</option>
                                @foreach (var item in Model.Classes)
                                {
                                    if (Model.ClassId == item.Id)
                                    {
                                        <option value="@item.Id" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="DepartmentId">Khoa</label>
                            <select class="form-select" id="DepartmentId" name="DepartmentId">
                                <option value="">-- Chọn khoa --</option>
                                @foreach (var item in Model.Departments)
                                {
                                    if (Model.DepartmentId == item.Id)
                                    {
                                        <option value="@item.Id" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label class="form-label" for="Dob">Ngày sinh</label>
                            <input class="form-control" type="date" id="Dob" name="Dob" value="@(Model.Dob?.ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="Gender">Giới tính</label>
                            <select class="form-select" id="Gender" name="Gender">
                                <option value="">-- Chọn --</option>
                                <option value="MALE" selected="@(Model.Gender != null && Model.Gender.Equals("MALE", StringComparison.OrdinalIgnoreCase) ? "selected" : null)">Nam</option>
                                <option value="FEMALE" selected="@(Model.Gender != null && Model.Gender.Equals("FEMALE", StringComparison.OrdinalIgnoreCase) ? "selected" : null)">Nữ</option>
                                <option value="OTHER" selected="@(Model.Gender != null && Model.Gender.Equals("OTHER", StringComparison.OrdinalIgnoreCase) ? "selected" : null)">Khác</option>
                                @if (!string.IsNullOrWhiteSpace(Model.Gender) && !new[] { "MALE", "FEMALE", "OTHER" }.Contains(Model.Gender, StringComparer.OrdinalIgnoreCase))
                                {
                                    <option value="@Model.Gender" selected="selected">@Model.Gender</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label class="form-label" for="Phone">Điện thoại</label>
                        <input class="form-control" type="text" id="Phone" name="Phone" value="@Model.Phone" maxlength="30" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label" for="Address">Địa chỉ</label>
                        <textarea class="form-control" id="Address" name="Address" rows="3" maxlength="255">@Model.Address</textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveProfileBtn">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>
    </div>
</div>
