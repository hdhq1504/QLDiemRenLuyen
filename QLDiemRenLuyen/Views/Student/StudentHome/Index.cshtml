@model StudentHomeVm
@using System.Linq
@using QLDiemRenLuyen.ViewModels.Student
@{ 
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["Title"] = "Dashboard sinh viên";
    var classification = string.IsNullOrWhiteSpace(Model.Classification) ? "Chưa xếp loại" : Model.Classification;
    var statusText = string.IsNullOrWhiteSpace(Model.Status) ? "Đang cập nhật" : Model.Status;
}

<link rel="stylesheet" href="~/css/student-dashboard.css" />

<div class="student-container">
    <div class="student-page student-dashboard">
        <section class="page-header">
            <div class="page-header__content">
                <h1>Xin chào, @Model.FullName</h1>
                <p>Cập nhật tiến độ rèn luyện trong học kỳ hiện tại và hoàn thành các đầu mục còn thiếu.</p>
                <span class="page-header__tagline">
                    <i class="fa-solid fa-graduation-cap"></i>
                    Học kỳ I • Năm học 2024-2025
                </span>
            </div>
            <div class="page-header__actions">
                <a class="btn btn-outline-primary" href="/student/profile">
                    <i class="fa-solid fa-user-gear me-2"></i>
                    Cập nhật hồ sơ
                </a>
                <a class="btn btn-primary" href="/student/activities">
                    <i class="fa-solid fa-rocket me-2"></i>
                    Khám phá hoạt động
                </a>
            </div>
        </section>

        <section class="banner-greeting">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4 position-relative">
                <div>
                    <div class="banner-title mb-2">Điểm rèn luyện của bạn đang ở mức @classification</div>
                    <p class="mb-0" style="opacity:0.88; max-width:520px;">
                        Duy trì tham gia hoạt động và cập nhật minh chứng để bảo toàn kết quả. Đội ngũ cố vấn luôn đồng hành nếu bạn cần hỗ trợ.
                    </p>
                    <div class="banner-meta">
                        <i class="fa-solid fa-gauge"></i>
                        Tổng điểm hiện tại: <strong class="ms-1">@Model.TotalScore</strong>
                    </div>
                </div>
                <div class="text-md-end">
                    <span class="badge bg-white text-primary fs-6 px-4 py-2 shadow-sm">
                        <i class="fa-solid fa-certificate me-2"></i>
                        @statusText
                    </span>
                </div>
            </div>
        </section>

        <section class="page-section">
            <div class="dashboard-overview">
                <div class="overview-card">
                    <div class="icon-circle">
                        <i class="fa-solid fa-chart-line"></i>
                    </div>
                    <div>
                        <span class="metric-label">Tổng điểm hiện tại</span>
                        <div class="metric-value">@Model.TotalScore</div>
                    </div>
                </div>
                <div class="overview-card">
                    <div class="icon-circle" style="background: rgba(16,185,129,0.12); color:#047857;">
                        <i class="fa-solid fa-people-group"></i>
                    </div>
                    <div>
                        <span class="metric-label">Hoạt động đã tham gia</span>
                        <div class="metric-value">@Model.ActivitiesJoined</div>
                    </div>
                </div>
                <div class="overview-card">
                    <div class="icon-circle" style="background: rgba(245,158,11,0.15); color:#b45309;">
                        <i class="fa-solid fa-folder-open"></i>
                    </div>
                    <div>
                        <span class="metric-label">Minh chứng đã tải lên</span>
                        <div class="metric-value">@Model.ProofsUploaded</div>
                    </div>
                </div>
                <div class="overview-card">
                    <div class="icon-circle" style="background: rgba(14,165,233,0.15); color:#0369a1;">
                        <i class="fa-solid fa-comments"></i>
                    </div>
                    <div>
                        <span class="metric-label">Phản hồi &amp; kiến nghị</span>
                        <div class="metric-value">@Model.FeedbackCount</div>
                    </div>
                </div>
            </div>
        </section>

        <section class="page-section">
            <div class="row g-4">
                <div class="col-12 col-xxl-6">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                                <i class="fa-solid fa-bell text-primary"></i>
                                Thông báo gần đây
                            </h5>
                            <a href="/student/notifications" class="text-primary fw-semibold small">
                                Xem tất cả <i class="fa-solid fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.Notifications?.Any() == true)
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var notification in Model.Notifications.OrderByDescending(n => n.CreatedAt).Take(3))
                                    {
                                        <a href="/student/notifications" class="list-group-item list-group-item-action border-0 py-3 px-4">
                                            <div class="d-flex align-items-start justify-content-between">
                                                <div class="flex-grow-1 me-3">
                                                    <h6 class="mb-2 fw-semibold text-dark">@notification.Title</h6>
                                                    <small class="text-muted">
                                                        <i class="fa-regular fa-clock me-1"></i>
                                                        @notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                    </small>
                                                </div>
                                                <i class="fa-solid fa-chevron-right text-primary mt-1"></i>
                                            </div>
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5">
                                    <i class="fa-regular fa-bell-slash fa-3x mb-3 d-block opacity-50"></i>
                                    <p class="mb-0 fw-medium">Chưa có thông báo mới</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-12 col-xxl-6">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                                <i class="fa-solid fa-calendar-days text-primary"></i>
                                Hoạt động sắp diễn ra
                            </h5>
                            <a href="/student/activities" class="text-primary fw-semibold small">
                                Xem lịch <i class="fa-solid fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            @if (Model.UpcomingActivities?.Any() == true)
                            {
                                <div class="row g-3">
                                    @foreach (var activity in Model.UpcomingActivities.OrderBy(a => a.StartAt).Take(3))
                                    {
                                        <div class="col-12">
                                            <div class="card border activity-card h-100">
                                                <div class="card-body p-3">
                                                    <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
                                                        <div class="flex-grow-1">
                                                            <h6 class="fw-semibold mb-2 text-dark">@activity.Title</h6>
                                                            <div class="text-muted small mb-1">
                                                                <i class="fa-regular fa-calendar me-1"></i>
                                                                @activity.StartAt.ToString("dd/MM/yyyy HH:mm")
                                                            </div>
                                                            <div class="text-muted small">
                                                                <i class="fa-regular fa-clock me-1"></i>
                                                                @activity.EndAt.ToString("dd/MM/yyyy HH:mm")
                                                            </div>
                                                        </div>
                                                        <span class="badge bg-primary-subtle text-primary px-3 py-2 fw-semibold flex-shrink-0">
                                                            @activity.Status
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5">
                                    <i class="fa-regular fa-calendar-xmark fa-3x mb-3 d-block opacity-50"></i>
                                    <p class="mb-0 fw-medium">Hiện chưa có hoạt động nào</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="page-section page-section--soft">
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3 mb-4">
                <div>
                    <h4 class="mb-1 fw-bold">Trải nghiệm đa thiết bị</h4>
                    <p class="mb-0 text-muted">Xem trước cách bảng điều khiển hiển thị trên desktop và màn hình di động.</p>
                </div>
                <a class="btn btn-outline-primary" href="/student/notifications">
                    <i class="fa-solid fa-mobile-screen-button me-2"></i>
                    Kiểm tra thông báo
                </a>
            </div>
            <div class="dashboard-preview">
                <div class="preview-device">
                    <div class="preview-device__label">
                        <i class="fa-solid fa-display"></i> Desktop preview
                    </div>
                    <div class="preview-device__screen">
                        <div class="preview-metric">
                            <span>Tổng điểm</span>
                            <strong>@Model.TotalScore</strong>
                        </div>
                        <div class="preview-metric">
                            <span>Hoạt động</span>
                            <strong>@Model.ActivitiesJoined</strong>
                        </div>
                        <div class="preview-metric">
                            <span>Minh chứng</span>
                            <strong>@Model.ProofsUploaded</strong>
                        </div>
                    </div>
                </div>
                <div class="preview-device">
                    <div class="preview-device__label">
                        <i class="fa-solid fa-mobile-screen"></i> Mobile preview
                    </div>
                    <div class="preview-device__screen">
                        <div class="preview-metric">
                            <span>Phản hồi</span>
                            <strong>@Model.FeedbackCount</strong>
                        </div>
                        <div class="preview-metric">
                            <span>Trạng thái</span>
                            <strong>@statusText</strong>
                        </div>
                        <div class="preview-metric">
                            <span>Học kỳ</span>
                            <strong>2024 - 2025</strong>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
