@{
    var title = ViewData["Title"] as string ?? "Trang";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - DRL</title>
    <environment include="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    </environment>
    <link rel="stylesheet" href="~/css/student.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="student-app">
    <div id="studentShell" class="student-shell">
        <partial name="_StudentSidebar" />

        <div class="student-shell__body">
            <partial name="_StudentHeader" />

            <main class="student-shell__content">
                @RenderSection("Breadcrumb", required: false)
                @RenderBody()
            </main>
        </div>
    </div>

    <environment include="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </environment>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>