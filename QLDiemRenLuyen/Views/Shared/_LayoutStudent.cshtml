@{
    var title = ViewData["Title"] as string ?? "Trang";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - DRL</title>
    <environment include="Development">
        <!-- Bootstrap 5 CDN cho môi trường phát triển -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-4KakG7s9DdDq+L9Yl1bKnVMRy4m1gqvOB0fOkH1ZZ1xdjQ671O5jM90+hCbGyF/F7kh/3Gzdh0d3d9390cJ+iw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </environment>
    <environment exclude="Development">
        <!-- Bootstrap 5 CDN cho môi trường chạy thật -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-4KakG7s9DdDq+L9Yl1bKnVMRy4m1gqvOB0fOkH1ZZ1xdjQ671O5jM90+hCbGyF/F7kh/3Gzdh0d3d9390cJ+iw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </environment>
    <link rel="stylesheet" href="~/css/student.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">
    <!-- Khung ứng dụng sinh viên -->
    <div id="app" class="d-flex">
        <!-- Thanh điều hướng bên trái -->
        <partial name="_StudentSidebar" />

        <!-- Khu vực nội dung chính -->
        <div class="flex-grow-1 d-flex flex-column min-vh-100">
            <partial name="_StudentHeader" />

            <main class="container-fluid py-4 flex-grow-1">
                @RenderSection("Breadcrumb", required: false)
                @RenderBody()
            </main>

            <footer class="student-footer text-center text-muted py-3">
                <!-- Chân trang tối giản -->
                <small>&copy; @DateTime.Now.Year - HUIT • DRL</small>
            </footer>
        </div>
    </div>

    <environment include="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </environment>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>