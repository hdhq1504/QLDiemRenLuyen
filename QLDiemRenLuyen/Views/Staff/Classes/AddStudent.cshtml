@model QLDiemRenLuyen.ViewModels.Staff.AddStudentToClassVm
@{
    ViewData["Title"] = "Thêm sinh viên vào lớp";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0"><i class="fa-solid fa-user-plus me-2 text-primary"></i>Thêm sinh viên vào lớp</h5>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] is string successMessage)
                {
                    <div class="alert alert-success">@successMessage</div>
                }
                <form asp-action="AddStudent" method="post" id="addStudentForm">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label" asp-for="StudentId">Mã sinh viên</label>
                        <input class="form-control" asp-for="StudentId" placeholder="Nhập MAND sinh viên" />
                        <span class="text-danger" asp-validation-for="StudentId"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ClassId">Lớp</label>
                        <select class="form-select" asp-for="ClassId">
                            <option value="">-- Chọn lớp --</option>
                            @foreach (var cls in Model.Classes)
                            {
                                <option value="@cls.Id">@cls.Name</option>
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="ClassId"></span>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="reset" class="btn btn-outline-secondary">Làm mới</button>
                        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk me-1"></i>Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/staff.classes.js" asp-append-version="true"></script>
}
