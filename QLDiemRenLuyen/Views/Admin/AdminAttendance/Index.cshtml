@model QLDiemRenLuyen.Models.ViewModels.Admin.AdminRegistrationsVm
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Đăng ký & tham gia";
    var token = Antiforgery.GetAndStoreTokens(ViewContext.HttpContext).RequestToken;
}

@if (string.IsNullOrWhiteSpace(Model.ActivityId))
{
    <div class="alert alert-info">
        <i class="fa-solid fa-circle-info me-2"></i>Hãy chọn hoạt động để quản lý điểm danh.
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 mb-1">Điểm danh hoạt động</h2>
            <p class="text-muted mb-0">Hoạt động: <strong>@Model.ActivityTitle</strong></p>
        </div>
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="AdminActivities" asp-action="Detail" asp-route-id="@Model.ActivityId"><i class="fa-solid fa-eye me-1"></i>Chi tiết hoạt động</a>
    </div>

    <form class="row g-3 mb-4" method="get">
        <input type="hidden" name="activityId" value="@Model.ActivityId" />
        <div class="col-md-6">
            <label class="form-label">Tìm kiếm</label>
            <input class="form-control" type="text" name="q" value="@Model.Keyword" placeholder="MSSV, họ tên hoặc email" />
        </div>
        <div class="col-md-6 d-flex align-items-end justify-content-end">
            <button class="btn btn-outline-secondary me-2" type="button" onclick="window.location='@Url.Action("Index", new { activityId = Model.ActivityId })'">Đặt lại</button>
            <button class="btn btn-primary" type="submit"><i class="fa-solid fa-search me-1"></i>Lọc</button>
        </div>
    </form>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Nhập CSV điểm danh</h5>
            <p class="text-muted">Tệp CSV cần chứa cột mã số sinh viên hoặc email. Hệ thống sẽ đánh dấu điểm danh cho các bản ghi khớp.</p>
            <form id="importForm" enctype="multipart/form-data">
                <input type="hidden" name="activityId" value="@Model.ActivityId" />
                <input type="hidden" name="__RequestVerificationToken" value="@token" />
                <div class="row g-3 align-items-center">
                    <div class="col-md-8">
                        <input class="form-control" type="file" name="csvFile" accept=".csv" />
                    </div>
                    <div class="col-md-4 text-md-end">
                        <button type="submit" class="btn btn-success"><i class="fa-solid fa-file-import me-1"></i>Nhập danh sách</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-nowrap align-middle">
            <thead>
                <tr>
                    <th>MSSV</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    <th>Điểm danh lúc</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Items.Data.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">Không có dữ liệu.</td>
                    </tr>
                }
                else
                {
                    foreach (var row in Model.Items.Data)
                    {
                        <tr data-id="@row.RegistrationId">
                            <td>@row.StudentId</td>
                            <td>@row.FullName</td>
                            <td>@row.Email</td>
                            <td>
                                @if (row.IsCheckedIn)
                                {
                                    <span class="badge bg-success">Đã điểm danh</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa điểm danh</span>
                                }
                            </td>
                            <td>@row.CheckedInAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">
                                @if (row.IsCheckedIn)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-warning js-unmark" data-id="@row.RegistrationId"><i class="fa-solid fa-rotate-left"></i> Bỏ</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-success js-mark" data-id="@row.RegistrationId"><i class="fa-solid fa-user-check"></i> Điểm danh</button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @{
                var totalPages = Model.Items.TotalPages > 0 ? Model.Items.TotalPages : 1;
            }
            @for (var i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == Model.Items.Page ? "active" : string.Empty)">
                    <a class="page-link" href="@Url.Action("Index", new { activityId = Model.ActivityId, q = Model.Keyword, page = i, pageSize = Model.Items.PageSize })">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<form id="antiForgeryForm" method="post">
    <input type="hidden" name="__RequestVerificationToken" value="@token" />
</form>

@section Scripts {
    <script src="~/js/admin.attendance.js" asp-append-version="true"></script>
}
