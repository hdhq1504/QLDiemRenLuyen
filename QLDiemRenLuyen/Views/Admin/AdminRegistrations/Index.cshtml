@model QLDiemRenLuyen.Models.ViewModels.Admin.AdminRegistrationsVm
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Đăng ký & tham gia";
    var token = Antiforgery.GetAndStoreTokens(ViewContext.HttpContext).RequestToken;
}

@if (string.IsNullOrWhiteSpace(Model.ActivityId))
{
    <div class="alert alert-info">
        <i class="fa-solid fa-circle-info me-2"></i>Vui lòng chọn một hoạt động từ trang <a asp-area="Admin" asp-controller="AdminActivities" asp-action="Index">Hoạt động</a> để xem danh sách đăng ký.
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 mb-1">Đăng ký tham gia</h2>
            <p class="text-muted mb-0">Hoạt động: <strong>@Model.ActivityTitle</strong></p>
        </div>
        <div class="btn-group">
            <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="AdminActivities" asp-action="Detail" asp-route-id="@Model.ActivityId"><i class="fa-solid fa-eye me-1"></i>Chi tiết hoạt động</a>
            <a class="btn btn-primary" asp-action="ExportCsv" asp-route-activityId="@Model.ActivityId"><i class="fa-solid fa-download me-1"></i>Xuất CSV</a>
        </div>
    </div>

    <form class="row g-3 mb-4" method="get">
        <input type="hidden" name="activityId" value="@Model.ActivityId" />
        <div class="col-md-4">
            <label class="form-label">Trạng thái</label>
            <select class="form-select" name="status">
                <option value="ALL" selected="@(Model.Status == "ALL")">Tất cả</option>
                <option value="REGISTERED" selected="@(Model.Status == "REGISTERED")">Đã đăng ký</option>
                <option value="CHECKED_IN" selected="@(Model.Status == "CHECKED_IN")">Đã điểm danh</option>
                <option value="CANCELLED" selected="@(Model.Status == "CANCELLED")">Đã huỷ</option>
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Từ khóa</label>
            <input class="form-control" type="text" name="q" value="@Model.Keyword" placeholder="Tên, email sinh viên" />
        </div>
        <div class="col-md-4 d-flex align-items-end justify-content-end">
            <button class="btn btn-outline-secondary me-2" type="button" onclick="window.location='@Url.Action("Index", new { activityId = Model.ActivityId })'">Đặt lại</button>
            <button class="btn btn-primary" type="submit"><i class="fa-solid fa-filter me-1"></i>Lọc</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-nowrap align-middle">
            <thead>
                <tr>
                    <th>MSSV</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    <th>Đăng ký lúc</th>
                    <th>Điểm danh lúc</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Items.Data.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">Không có dữ liệu.</td>
                    </tr>
                }
                else
                {
                    foreach (var row in Model.Items.Data)
                    {
                        <tr data-id="@row.RegistrationId">
                            <td>@row.StudentId</td>
                            <td>@row.FullName</td>
                            <td>@row.Email</td>
                            <td><span class="badge bg-secondary">@row.Status</span></td>
                            <td>@row.RegisteredAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@row.CheckedInAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-outline-danger js-cancel" data-id="@row.RegistrationId"><i class="fa-solid fa-ban"></i></button>
                                    <button type="button" class="btn btn-outline-success js-reregister" data-id="@row.RegistrationId"><i class="fa-solid fa-rotate-left"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @{
                var totalPages = Model.Items.TotalPages > 0 ? Model.Items.TotalPages : 1;
            }
            @for (var i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == Model.Items.Page ? "active" : string.Empty)">
                    <a class="page-link" href="@Url.Action("Index", new { activityId = Model.ActivityId, status = Model.Status, q = Model.Keyword, page = i, pageSize = Model.Items.PageSize })">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<form id="antiForgeryForm" method="post">
    <input type="hidden" name="__RequestVerificationToken" value="@token" />
</form>

@section Scripts {
    <script src="~/js/admin.registrations.js" asp-append-version="true"></script>
}
