@model LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="auth-page d-flex align-items-center justify-content-center py-5">
    <div class="card shadow-lg auth-card">
        <div class="card-body p-4 p-lg-5">
            <div class="text-center mb-4">
                <div class="auth-logo mb-3">
                    <img src="~/images/logo.jpg" alt="" class="img-fluid" style="height:100px;" asp-append-version="true" />
                </div>
                <h2 class="fw-bold text-primary">Cổng đăng nhập</h2>
                <p class="text-muted">Quản lý điểm rèn luyện sinh viên - Khoa CNTT HUIT</p>
            </div>

            @if (TempData["AuthSuccess"] is string successMessage)
            {
                <div class="alert alert-success" role="alert">@successMessage</div>
            }

            @if (TempData["AuthInfo"] is string infoMessage)
            {
                <div class="alert alert-info" role="alert">@infoMessage</div>
            }

            <form asp-action="Login" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-primary"><i class="fa-solid fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="1234@huit.edu.vn" autocomplete="username" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-primary"><i class="fa-solid fa-lock"></i></span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    <a asp-action="ForgotPassword" class="small">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">Đăng nhập</button>
            </form>

            <div class="mt-4 text-center">
                <span class="text-muted">Chưa có tài khoản?</span>
                <a asp-action="Register" class="fw-semibold">Đăng ký ngay</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
